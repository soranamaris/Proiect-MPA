<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect_MPA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proiect_MPA.styles.css" asp-append-version="true" />
    <style>
        /* Stilizare pentru navbar */
        .navbar {
            background: linear-gradient(to bottom right, #fef8e6, #f5e6d4);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar .navbar-brand, .navbar .nav-link {
                color: #6c5e52 !important;
                font-weight: bold;
                font-family: 'Georgia', serif;
            }

                .navbar .nav-link:hover {
                    color: #d4a373 !important;
                }

        .navbar-toggler {
            border-color: #d4a373;
        }

        /* Container principal */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: #fef8e6;
            border: 1px solid #f5e6d4;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Footer */
        .footer {
            background: #f5e6d4;
            color: #6c5e52;
            padding: 15px 0;
            text-align: center;
            border-top: 2px solid #d4a373;
        }

            .footer a {
                color: #d4a373;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Stil general */
        body {
            font-family: 'Verdana', sans-serif;
            background-color: #faf3e3;
            color: #333;
        }

        h1, h2, h3 {
            color: #6c5e52;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Restaurant</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservations" asp-action="Index">Rezervari</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Zones" asp-action="Index">Zone</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">Clienti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Waiters" asp-action="Index">Chelnerii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Tables" asp-action="Index">Mese</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Chat">Chat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-3">
        <div class="container">
            &copy; 2024 - Proiect_MPA - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
