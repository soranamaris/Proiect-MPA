@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container text-center">
    <h1 class="display-4">Bine ați venit la restaurantul nostru!</h1>
    <p class="lead">Bucurați-vă de o călătorie culinară cu preparate rafinate și arome unice.</p>
    <img src="~/images/restaurant-photo.jpg" alt="Interior Restaurant" class="img-fluid featured-image">
</div>

<style>
    /* Container principal */
    .welcome-container {
        background: linear-gradient(to bottom right, #ffe5d9, #E8C39E);
        padding: 50px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        margin: 20px auto;
        max-width: 1300px; /* Creștem lățimea containerului */
    }

    /* Titlul principal */
    .display-4 {
        font-family: 'Georgia', serif;
        font-size: 3.5rem;
        color: #3c3b3b;
        margin-bottom: 20px;
    }

    /* Text de introducere */
    .lead {
        font-size: 1.5rem;
        color: #5a5a5a;
        margin-bottom: 30px;
    }

    /* Imaginea de fundal */
    .featured-image {
        max-width: 60%; /* Imagine mai mică */
        height: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        margin-top: 20px;
    }
</style>
