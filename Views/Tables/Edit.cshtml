@model Proiect_MPA.Models.Table

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Seats" class="control-label"></label>
                <input asp-for="Seats" class="form-control" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WaiterID" class="control-label"></label>
                <select asp-for="WaiterID" class="form-control" asp-items="ViewBag.WaiterID"></select>
                <span asp-validation-for="WaiterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZoneID" class="control-label"></label>
                <select asp-for="ZoneID" class="form-control" asp-items="ViewBag.ZoneID"></select>
                <span asp-validation-for="ZoneID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReservationID" class="control-label"></label>
                <input asp-for="ReservationID" class="form-control" />
                <span asp-validation-for="ReservationID" class="text-danger"></span>
            </div>
            <div class="form-group">
    <div class="table-responsive">
        <table class="table">
            <tr>
            @{
                int cnt = 0;
                @if (Model.AssignedScheduleDataList != null){

                
                foreach (var schedule in Model.AssignedScheduleDataList)
                {
                    if (cnt++ % 3 == 0)
                    {
                        @:</tr><tr>
                    }
                    @:<td>
                        <input type="checkbox" 
                               name="selectedSchedules" 
                               value="@schedule.ScheduleID" 
                               @(Html.Raw(schedule.Assigned ? "checked=\"checked\"" : "")) />
                        @schedule.ScheduleID @: @schedule.Name
                    @:</td>
                }
                @:</tr>
                }
            }
        </table>
    </div>
</div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
